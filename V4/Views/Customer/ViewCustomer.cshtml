@model CustomersJobsViewModel
<div class="row">
    <partial name="_NavLeft" />
    <div class="col-10 border p-3">
        <div class="row">

            <div class="col-6 mt-4">
                <h3>@Model.cjvmCustomer.FirstName @Model.cjvmCustomer.LastName</h3>
                <p>
                    @Model.cjvmCustomer.Address<br>
                    @Model.cjvmCustomer.City, @Model.cjvmCustomer.State @Model.cjvmCustomer.Zip
                </p>
        </div>
        <div class="col-6 mt-4">
            <p>Monthly Recurring Revenue: $147</p>
            <p>Yearly Recurring Revenue: $1,764</p>
            <p>Customer Value:  $5,292</p>
        </div>
    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Job ID</th>
                <th scope="col">Date</th>
                <th scope="col">Team</th>
                <th scope="col">Revenue</th>
                <th scope="col">Cost</th>
                <th scope="col">Gross Profit</th>
                <th scope="col">GPM</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var j in Model.cjvmJobs)
            {
                <tr>
                    <td><a href="/viewjob/@j.JobId">@j.JobId</a></td>
                    <td>@j.ScheduleDate.ToShortDateString()</td>
                    <td>@j.TeamId</td>
                    <td>@j.Amount</td>
                    <td>cost</td>
                    <td>gross profit</td>
                    <td>GPM</td>
                </tr>

            }

        </tbody>
    </table>
</div>
</div>