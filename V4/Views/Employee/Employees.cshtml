@model List<Employee>
<div class="row">
    <partial name="_NavLeft" />
    <div class="col-10 border">
        <h3 class="mt-4">Employee List</h3>


        <table class="table table-striped mt-4">
            <thead>
                <tr>
                    <th scope="col">Employee ID</th>
                    <th scope="col">Employee</th>
                    <th scope="col">Pay Rate</th>
                    <th scope="col">Active</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var emp in Model)
                {
                    <tr>
                        <td><a href="/">@emp.Id</a></td>
                        <td><a href="/">@emp.First_Name @emp.Last_Name</a></td>
                        @if (emp.Pay_Rate == 0)
                        {
                            <td>$0  (update in T-Sheets)</td>
                        }
                        else
                        {
                            <td>$@emp.Pay_Rate</td>
                        }
                        <td>@emp.Active</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>