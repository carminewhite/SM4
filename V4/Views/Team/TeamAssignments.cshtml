@model JobTeamViewModel
    <div class="row">

        <partial name="_NavLeft" />
        <div class="col-10 border">
            <h3 class="mt-4">Teams Assignments</h3>
            <div id="teamDate" class="col-3">
                <span></span>
                <form method="post" action="/teamassignmentsdate" id="teamsdateform">
                    <input type="hidden" id="teamDate" name="teamDate" />
                </form>
            </div>

            <hr />
            @if (Model.Jobs.Count != 0)
            {
                var todayShort = Model.Jobs.First().ScheduleDate.ToShortDateString();
                var todayLong = Model.Jobs.First().ScheduleDate.ToLongDateString();
                DateTime todayDT = Model.Jobs.First().ScheduleDate;
                <h3>@todayLong</h3>
                @foreach (var team in Model.Teams)
                {
                    var thisTeamJob = Model.Jobs.FirstOrDefault(u => u.TeamId == team.Id);
                    string AssignedOrNotBorder;
                    string AssignedOrNotNotice;
                    string AssignedOrNotNoticeColor;
                    if (thisTeamJob.TeamMemberId1 == 0 || thisTeamJob.TeamMemberId2 == 0 || thisTeamJob.TeamMemberId3 == 0)
                    {
                        AssignedOrNotBorder = "border border-danger";
                        AssignedOrNotNotice = "Not Assigned";
                        AssignedOrNotNoticeColor = "text-danger";
                    }
                    else
                    {
                        AssignedOrNotBorder = "border";
                        AssignedOrNotNotice = "Assigned";
                        AssignedOrNotNoticeColor = "text-success";
                    }

                    <div class="@AssignedOrNotBorder mt-2 col-3 rounded p-3 d-inline-block">
                       
                        <h4 class="mt-4 d-inline">@team.TeamName</h4>
                        <p class="@AssignedOrNotNoticeColor">@AssignedOrNotNotice</p>
                        @* save for later... with ajax below *@
                        @*<div>
                            <a id="@team.Id" href="javascript:;" class="d-inline-block text-sm-right">Save as Default Team</a>
                        </div>*@

                        <form action="/save-team-assignment" method="post" id="form-@team.Id">
                            <input type="hidden" value="@team.Id" id="TeamId" name="TeamId" />
                            <input type="hidden" value="@todayDT" id="AssignedDate" name="AssignedDate" />
                            <input type="hidden" value="true" id="AssignmentCompleted" name="AssignmentCompleted" />
                            <div class="form-group">
                                <select class="form-control mt-1" id="EmpId1" name="EmpId1">
                                    @{
                                        if (thisTeamJob.TeamMemberId1 == 1)
                                        {
                                            <option value="1"> ** Inactive worker ** </option>
                                        }
                                        else if (thisTeamJob.TeamMemberId1 == 2)
                                        {
                                            <option value="2">No Worker Today</option>
                                        }
                                        else if (thisTeamJob.TeamMemberId1 == 0)
                                        {
                                            // if unassigned - pull default employee
                                            Employee defaultEmp1 = Model.Employees.FirstOrDefault(e => e.Id == team.DefaultTeamMember1Id);
                                            if (defaultEmp1 == null)
                                            {
                                                <option value="0">No default set</option>
                                            }
                                            else
                                            {
                                                <option value="@defaultEmp1.Id">@defaultEmp1.First_Name @defaultEmp1.Last_Name</option>
                                            }
                                        }
                                        else
                                        {
                                            // if Employee has been deleted from Tsheets, they won't be included in the Employee object.  Defaulting to Inactive Worker.
                                            // This will overwrite the employee in the DB with a #1 for the employee ID once saved
                                            Employee assignedEmp1 = Model.Employees.FirstOrDefault(u => u.Id == thisTeamJob.TeamMemberId1);
                                            if (assignedEmp1 == null)
                                            {
                                                <option value="1"> ** Inactive worker ** </option>
                                            }
                                            else
                                            {
                                                <option value="@assignedEmp1.Id">@assignedEmp1.First_Name @assignedEmp1.Last_Name</option>
                                            }
                                        }
                                        <option> ----------------- </option>
                                        <option value="1"> ** Inactive worker ** </option>
                                        <option value="2">No Worker Today</option>

                                        foreach (var employee in Model.Employees)
                                        {
                                            <option value="@employee.Id">@employee.First_Name @employee.Last_Name</option>
                                        }
                                    }
                                </select>
                                <select class="form-control mt-1" id="EmpId2" name="EmpId2">
